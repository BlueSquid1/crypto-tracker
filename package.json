{
  "name": "crypto-tracker",
  "version": "0.0.0",
  "scripts": {
    "clean": "rm -rf ./dist/api && rm -rf ./dist/public/ && rm -rf ./node_modules",
    "build": "npm install ; npm run cp:www ; tsc -p ./src/server/tsconfig.api.json ; docker build --tag node-docker .",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "cp:www": "mkdir -p ./dist/api/bin && cp ./src/server/bin/www ./dist/api/bin/",
    "database:drop_tables": "docker volume rm $(docker volume ls -q)",
    "dev": "npm run cp:www ; concurrently -k \"tsc -p ./src/server/tsconfig.api.json -w\" \"nodemon -r ./dist/api/bin/www --watch\""
  },
  "private": true,
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "mongodb": "^4.3.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jasmine": "~3.10.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^12.11.1",
    "jasmine-core": "~3.10.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.5.2"
  }
}
